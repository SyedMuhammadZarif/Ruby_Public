<div id="<%= dom_id(post) %>">
  <div class="flex flex-row items-start justify-between">
    <div class="flex flex-col text-white max-w-24 ml-0">
      <p class="my-5 font-extrabold">
        <%= post.title %>
      </p>
    </div>

    <p class="p-2 text-white <%= post.completed ? 'bg-green-500' : 'bg-red-500' %> rounded-full w-min mx-20">
      <%= post.completed ? "Done" : "Incomplete" %>
    </p>
  </div>
</div>
